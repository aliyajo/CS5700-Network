#!/usr/bin/env -S python3 -u


'''
This is just a testing file I am using to help with parsing
'''
def main():

  subnet_mask = "110.40.240.0"
  subnet_split = subnet_mask.split('.')
  print(subnet_split)
  converted_subnet = ""
  for i in subnet_split:
      binary = ""
      decimal = int(i)
      while decimal > 0:
        binary = str(decimal % 2) + binary
        decimal = decimal // 2
      # If the binary number is less than 8 bits long, add leading zeros
      binary = binary.zfill(8)
      converted_subnet += str(binary)
  print(converted_subnet)
  print(len(converted_subnet))

  

    

  
if __name__ == "__main__":
  main()
