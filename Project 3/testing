#!/usr/bin/env -S python3 -u


'''
This is just a testing file I am using to help with parsing
'''
def main():

  ip_addres = "192.23.45.0"

  subnet_mask = "255.240.0.0"
  subnet_split = subnet_mask.split('.')
  print(subnet_split)
  converted_subnet = ""
  for i in subnet_split:
      binary = ""
      decimal = int(i)
      while decimal > 0:
        binary = str(decimal % 2) + binary
        decimal = decimal // 2
      # If the binary number is less than 8 bits long, add leading zeros
      binary = binary.zfill(8)
      converted_subnet += str(binary)
  consecutive_ones = 0
  for i in converted_subnet:
      if i == '1':
          consecutive_ones += 1
      else:
          break 
  print(consecutive_ones)
  CIDR_address = subnet_mask + "/" + str(consecutive_ones)
  print(CIDR_address)



  

    

  
if __name__ == "__main__":
  main()
